---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import TrustSignals from '../components/TrustSignals.astro';
import Features from '../components/Features.astro';
import StatsSection from '../components/StatsSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import ServiceLinksSection from '../components/ServiceLinksSection.astro';
import ProcessSection from '../components/ProcessSection.astro';
import BusinessSectors from '../components/BusinessSectors.astro';
import PricingSection from '../components/PricingSection.astro';
import ClientsSection from '../components/ClientsSection.astro';
import TeamSection from '../components/TeamSection.astro';
import FAQ from '../components/FAQ.astro';
import ContactSection from '../components/ContactSection.astro';
import CTASection from '../components/CTASection.astro';
import CTAForm from '../components/CTAForm.astro';
import StickyCTA from '../components/StickyCTA.astro';
import SmoothScroll from '../components/SmoothScroll.astro';
---

<BaseLayout
  title="Бухгалтерские услуги в Минске | Аутсорсинг бухгалтерии — Экология Финансов"
  description="Профессиональные бухгалтерские услуги в Минске и Беларуси. Аутсорсинг бухгалтерии с экономией до 70%. Страхование ответственности $90K. Опыт 7+ лет."
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <Hero />
    
    <!-- Trust Signals -->
    <TrustSignals />
    
    <!-- Features / Why Us -->
    <Features />
    
    <!-- Services Section -->
    <ServicesSection />
    
    <!-- Service Links (SEO pages) -->
    <ServiceLinksSection />
    
    <!-- CTA: Экспресс-аудит -->
    <CTASection
      title="Бесплатный экспресс‑аудит бухгалтерии"
      subtitle="Оценим текущее состояние учета и дадим рекомендации за 24 часа"
      variant="gradient"
      showForm={true}
    >
      <CTAForm
        title="Записаться на экспресс‑аудит"
        source="Экспресс-аудит"
        compact={true}
        dark={true}
      />
    </CTASection>
    
    <!-- How We Work -->
    <ProcessSection />
    
    <!-- Business Sectors -->
    <BusinessSectors />
    
    <!-- Pricing -->
    <PricingSection />
    
    <!-- CTA after Pricing -->
    <CTASection
      title="Не нашли подходящий тариф?"
      subtitle="Мы подготовим персональное предложение под ваш бизнес"
      variant="secondary"
    />
    
    <!-- Team Section -->
    <TeamSection />
    
    <!-- Clients Logos + Testimonial -->
    <ClientsSection />
    
    <!-- Stats -->
    <StatsSection />
    
    <!-- FAQ -->
    <FAQ />
    
    <!-- CTA with background image -->
    <CTASection
      title="Готовы начать экономить?"
      subtitle="Звоните прямо сейчас или оставьте заявку — мы перезвоним в течение 15 минут"
      variant="image"
      bgImage="/img/call-to-action.webp"
    />
    
    <!-- Contact Section -->
    <ContactSection />
  </main>
  
  <Footer />
  <StickyCTA />
  <SmoothScroll />
</BaseLayout>
