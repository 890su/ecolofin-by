<script>
  document.addEventListener('DOMContentLoaded', () => {
    const stickyCTA = document.getElementById('sticky-cta');
    if (!stickyCTA) return;
    
    let lastScroll = 0;
    let ticking = false;
    
    const updateStickyVisibility = () => {
      const currentScroll = window.pageYOffset;
      const windowHeight = window.innerHeight;
      const documentHeight = document.documentElement.scrollHeight;
      const scrolledToBottom = currentScroll + windowHeight >= documentHeight - 200;
      
      // Show when scrolled down more than 400px, hide near bottom (footer)
      if (currentScroll > 400 && !scrolledToBottom) {
        stickyCTA.style.transform = 'translateY(0)';
        stickyCTA.style.opacity = '1';
      } else {
        stickyCTA.style.transform = 'translateY(100%)';
        stickyCTA.style.opacity = '0';
      }
      
      lastScroll = currentScroll;
      ticking = false;
    };
    
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(updateStickyVisibility);
        ticking = true;
      }
    });
    
    // Initial state
    stickyCTA.style.transform = 'translateY(100%)';
    stickyCTA.style.opacity = '0';
    stickyCTA.style.transition = 'transform 0.3s ease-out, opacity 0.3s ease-out';
  });
</script>
