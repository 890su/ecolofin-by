---
interface Props {
  title: string;
  subtitle?: string;
  variant?: 'primary' | 'secondary' | 'gradient' | 'image';
  showForm?: boolean;
  bgImage?: string;
}

const { 
  title, 
  subtitle, 
  variant = 'primary',
  showForm = false,
  bgImage = '/img/call-to-action.webp'
} = Astro.props;

const variantClasses = {
  primary: 'bg-gradient-cta text-white',
  secondary: 'bg-gray-50 text-gray-900',
  gradient: 'bg-gradient-to-br from-primary-600 via-primary-700 to-accent-600 text-white',
  image: 'text-white'
};
---

<section class={`section-padding relative overflow-hidden ${variant !== 'image' ? variantClasses[variant] : ''}`}>
  {/* Background Image for 'image' variant */}
  {variant === 'image' && (
    <>
      <div class="absolute inset-0">
        <img 
          src={bgImage} 
          alt="" 
          class="w-full h-full object-cover"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900/90 to-gray-900/70"></div>
      </div>
    </>
  )}
  
  {/* Decorative elements for gradient variant */}
  {variant === 'gradient' && (
    <>
      <div class="absolute top-0 right-0 w-96 h-96 bg-white/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-72 h-72 bg-accent-500/20 rounded-full blur-3xl"></div>
    </>
  )}
  
  {/* Pattern overlay for primary variant */}
  {variant === 'primary' && (
    <div class="absolute inset-0 opacity-5" style="background-image: url('/img/header-bg.svg'); background-size: 80px;"></div>
  )}
  
  <div class="container-custom relative z-10">
    <div class={`text-center max-w-3xl mx-auto ${showForm ? 'mb-8' : ''}`}>
      <h2 class={`text-3xl md:text-4xl font-bold mb-4 ${variant === 'secondary' ? 'text-gray-900' : 'text-white'}`}>
        {title}
      </h2>
      {subtitle && (
        <p class={`text-lg mb-8 ${variant === 'secondary' ? 'text-gray-600' : 'text-white/80'}`}>
          {subtitle}
        </p>
      )}
      {!showForm && (
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          {variant === 'secondary' ? (
            <>
              <a 
                href="tel:+375296908945" 
                class="btn-primary text-lg px-8 py-4 flex items-center gap-2"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                8 (029) 690-89-45
              </a>
              <a href="#contacts" class="btn-secondary text-lg px-8 py-4">
                Написать нам
              </a>
            </>
          ) : (
            <>
              <a 
                href="tel:+375296908945" 
                class="inline-flex items-center gap-2 bg-white text-primary-700 px-8 py-4 rounded-xl font-semibold text-lg hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                8 (029) 690-89-45
              </a>
              <a 
                href="#contacts" 
                class="inline-flex items-center gap-2 border-2 border-white/30 text-white px-8 py-4 rounded-xl font-semibold text-lg hover:bg-white/10 transition-all duration-300"
              >
                Написать нам
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </>
          )}
        </div>
      )}
    </div>
    {showForm && (
      <div class="max-w-md mx-auto">
        <slot />
      </div>
    )}
  </div>
</section>
