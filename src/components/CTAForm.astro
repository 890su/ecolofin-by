    </div>
  )}
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // #region agent log
    const logEvent = (hypothesisId, message, data = {}) => {
      fetch('http://127.0.0.1:7242/ingest/693df5f9-5bad-417f-998f-b8f3f217037f', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          sessionId: 'debug-session',
          runId: 'run1',
          hypothesisId,
          location: 'src/components/CTAForm.astro',
          message,
          data,
          timestamp: Date.now()
        })
      }).catch(() => {});
    };
    // #endregion

    const forms = document.querySelectorAll('form[id^="cta-form-"]');
    
    // Telegram config
    const TG_BOT = '8503860004:AAHjB6l5VJ2D9NP8oGd8gGuczSNmH5QP9u8';
    const TG_CHAT = '-5240163266';
    
    // #region agent log
    logEvent('H1', 'script_loaded', { formsCount: forms.length, mode: 'direct_telegram' });
    // #endregion
    
    forms.forEach((form) => {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form as HTMLFormElement);
        const name = formData.get('name') || '';
        const phone = formData.get('phone') || '';
        const email = formData.get('email') || '';
        const source = (form as HTMLElement).dataset.source || '–§–æ—Ä–º–∞';
        
        // #region agent log
        logEvent('H2', 'submit_handler_start', {
          hasName: Boolean(name),
          hasPhone: Boolean(phone),
          hasEmail: Boolean(email),
          sourceLen: String(source).length
        });
        // #endregion
        
        const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
        const messageDiv = form.querySelector('#form-message') as HTMLElement;
        const originalText = submitButton.innerHTML;
        
        submitButton.disabled = true;
        submitButton.innerHTML = '<svg class="animate-spin h-5 w-5 mx-auto" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';
        messageDiv.classList.add('hidden');
        
        try {
          // –û—Ç–ø—Ä–∞–≤–∫–∞ –Ω–∞–ø—Ä—è–º—É—é –≤ Telegram
          const text = `üîî –ó–∞—è–≤–∫–∞ —Å ecolofin.by\n\n–ò–º—è: ${name}\n–¢–µ–ª–µ—Ñ–æ–Ω: ${phone}${email ? '\nEmail: ' + email : ''}\n\n–ò—Å—Ç–æ—á–Ω–∏–∫: ${source}`;
          
          // #region agent log
          logEvent('H3', 'telegram_fetch_start', {
            textLen: text.length,
            target: 'telegram_sendMessage'
          });
          // #endregion

          const response = await fetch(`https://api.telegram.org/bot${TG_BOT}/sendMessage`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ chat_id: TG_CHAT, text: text })
          });
          
          // #region agent log
          logEvent('H3', 'telegram_fetch_response', {
            ok: response.ok,
            status: response.status
          });
          // #endregion

          if (response.ok) {
            messageDiv.className = 'mt-4 p-4 rounded-xl text-center bg-green-50 text-green-800 border border-green-200';
            messageDiv.innerHTML = '<div class="flex items-center justify-center gap-2"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg><span>–°–ø–∞—Å–∏–±–æ! –ú—ã —Å–∫–æ—Ä–æ —Å–≤—è–∂–µ–º—Å—è —Å –í–∞–º–∏.</span></div>';
            (form as HTMLFormElement).reset();
          } else {
            throw new Error('–û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏');
          }
          
          messageDiv.classList.remove('hidden');
        } catch (error) {
          // #region agent log
          logEvent('H4', 'telegram_fetch_error', {
            errorType: error && error.name ? error.name : 'unknown'
          });
          // #endregion

          messageDiv.className = 'mt-4 p-4 rounded-xl text-center bg-primary-50 text-primary-800 border border-primary-200';
          messageDiv.innerHTML = `
            <p class="mb-2 font-semibold">–ü–æ–∑–≤–æ–Ω–∏—Ç–µ –Ω–∞–º –Ω–∞–ø—Ä—è–º—É—é:</p>
            <a href="tel:+375296908945" class="text-lg font-bold text-primary-600 hover:text-primary-700">8 (029) 690-89-45</a>
          `;
          messageDiv.classList.remove('hidden');
        } finally {
          submitButton.disabled = false;
          submitButton.innerHTML = originalText;
        }
      });
    });
  });
</script>
