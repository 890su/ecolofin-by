---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTAForm from '../components/CTAForm.astro';
import { servicePages, serviceList } from '../content/service-pages';

export async function getStaticPaths() {
  return servicePages.map((page) => ({
    params: { slug: page.slug },
    props: { page },
  }));
}

const { page } = Astro.props;

const relatedServices = serviceList
  .filter((item) => item.slug !== page.slug)
  .slice(0, 6);

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: page.faq.map((item) => ({
    '@type': 'Question',
    name: item.q,
    acceptedAnswer: {
      '@type': 'Answer',
      text: item.a,
    },
  })),
};

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: page.title,
  provider: {
    '@type': 'ProfessionalService',
    name: 'Экология Финансов',
    url: 'https://ecolofin.by',
  },
  areaServed: 'BY',
  serviceType: 'Бухгалтерские услуги',
  description: page.metaDescription,
};
---

<BaseLayout title={page.title} description={page.metaDescription}>
  <Header />

  <main class="pt-16 md:pt-20">
    <section class="section-padding bg-gradient-to-br from-primary-50 to-white">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
          <div>
            <p class="text-sm uppercase tracking-wide text-primary-600 font-semibold mb-3">
              Бухгалтерские услуги
            </p>
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
              {page.heroTitle}
            </h1>
            <p class="text-xl text-gray-700 mb-6">{page.heroSubtitle}</p>
            <p class="text-gray-600 leading-relaxed mb-8">{page.lead}</p>
            <div class="flex flex-wrap gap-4">
              <a href="#cta" class="btn-primary">Получить консультацию</a>
              <a href="#what-includes" class="btn-secondary">Что входит</a>
            </div>
          </div>
          <CTAForm
            title={page.ctaTitle}
            subtitle={page.ctaSubtitle}
            source={`Посадочная: ${page.slug}`}
          />
        </div>
      </div>
    </section>

    <section id="what-includes" class="section-padding bg-white">
      <div class="container-custom">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">Что входит</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {page.includes.map((item) => (
            <div class="flex items-start gap-3 bg-gray-50 rounded-lg p-4">
              <div class="w-6 h-6 flex items-center justify-center rounded-full bg-primary-100 text-primary-600 font-bold">
                ✓
              </div>
              <p class="text-gray-700">{item}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
          <div>
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">Кому подходит</h2>
            <ul class="space-y-3">
              {page.forWhom.map((item) => (
                <li class="flex items-start gap-3">
                  <span class="text-primary-600 font-bold">•</span>
                  <span class="text-gray-700">{item}</span>
                </li>
              ))}
            </ul>
          </div>
          <div>
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">Преимущества</h2>
            <ul class="space-y-3">
              {page.benefits.map((item) => (
                <li class="flex items-start gap-3">
                  <span class="text-primary-600 font-bold">•</span>
                  <span class="text-gray-700">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="section-padding bg-white">
      <div class="container-custom">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">Частые вопросы</h2>
        <div class="space-y-4">
          {page.faq.map((item) => (
            <details class="rounded-lg border border-gray-200 p-4">
              <summary class="font-semibold text-gray-900 cursor-pointer">{item.q}</summary>
              <p class="text-gray-600 mt-3">{item.a}</p>
            </details>
          ))}
        </div>
      </div>
    </section>

    <section id="cta" class="section-padding bg-primary-600 text-white">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold mb-4">{page.ctaTitle}</h2>
            <p class="text-lg text-primary-100 mb-6">{page.ctaSubtitle}</p>
            <p class="text-primary-100">
              Или позвоните: <a href="tel:+375296908945" class="font-semibold text-white">8 (029) 690-89-45</a>
            </p>
          </div>
          <CTAForm
            title="Оставить заявку"
            subtitle=""
            source={`CTA: ${page.slug}`}
            compact={true}
          />
        </div>
      </div>
    </section>

    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">Другие услуги</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {relatedServices.map((item) => (
            <a
              href={`/${item.slug}`}
              class="block rounded-lg bg-white p-5 shadow-sm hover:shadow-md transition-shadow"
            >
              <h3 class="font-semibold text-gray-900">{item.title}</h3>
              <p class="text-sm text-primary-600 mt-2">Подробнее →</p>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
</BaseLayout>
